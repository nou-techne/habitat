{
  "name": "@habitat/worker",
  "version": "0.3.3",
  "description": "Habitat event worker for cross-context workflows",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsup",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "worker": "tsx src/index.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@habitat/shared": "workspace:*",
    "amqplib": "^0.10.3",
    "pg": "^8.11.3",
    "dotenv": "^16.4.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/amqplib": "^0.10.4",
    "@types/pg": "^8.11.0",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1"
  }
}
