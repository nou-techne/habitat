# Habitat Production Environment Variables
# Copy to .env and fill in the values

# Domain
DOMAIN=habitat.example.com

# PostgreSQL
POSTGRES_DB=habitat
POSTGRES_USER=habitat
POSTGRES_PASSWORD=<generate-secure-password>

# RabbitMQ
RABBITMQ_USER=habitat
RABBITMQ_PASSWORD=<generate-secure-password>
RABBITMQ_VHOST=habitat

# JWT
JWT_SECRET=<generate-secure-secret>
JWT_EXPIRY=15m

# CORS
CORS_ORIGIN=https://habitat.example.com

# GraphQL Endpoint (for frontend)
NEXT_PUBLIC_GRAPHQL_ENDPOINT=https://habitat.example.com/graphql

# Optional: Sentry for error tracking
# SENTRY_DSN=https://...

# Optional: Email service
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=habitat@example.com
# SMTP_PASSWORD=<password>

# Optional: S3-compatible storage
# S3_ENDPOINT=https://s3.amazonaws.com
# S3_BUCKET=habitat-uploads
# S3_ACCESS_KEY=<access-key>
# S3_SECRET_KEY=<secret-key>
