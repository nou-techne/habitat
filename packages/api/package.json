{
  "name": "@habitat/api",
  "version": "0.3.3",
  "description": "Habitat GraphQL API server",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsup",
    "dev": "tsx watch src/server.ts",
    "dev:health": "tsx watch src/health.ts",
    "start": "node dist/server.js",
    "start:health": "node dist/health.js",
    "seed": "tsx src/data/seed.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@habitat/shared": "workspace:*",
    "graphql": "^16.8.1",
    "@apollo/server": "^4.10.0",
    "@supabase/supabase-js": "^2.39.3",
    "pg": "^8.11.3",
    "dotenv": "^16.4.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/pg": "^8.11.0",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1"
  }
}
