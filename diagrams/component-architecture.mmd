        end

        subgraph AgreementsApp["Agreements Components"]
            A_AgreementSvc["Agreement Service"]
            A_TermSvc["Term Service"]
            A_FormulaSvc["Formula Service"]
            A_CalcSvc["Calculation Service"]
        end
    end

    subgraph Core["Core Services Layer"]
        IdentitySvc["Identity Service"]
        EventSvc["Event Service"]
        AuthzSvc["Authorization Service"]
        ConfigSvc["Configuration Service"]
        NotifySvc["Notification Service"]
        AuditSvc["Audit Service"]
    end

